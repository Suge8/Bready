# 面宝 (Bready) 环境配置示例
# 复制此文件为 .env.local 并填入实际值

# =====================================
# 数据库配置
# =====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bready
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# 数据库连接池配置（性能优化）
DB_MAX_CONNECTIONS=10
DB_MIN_CONNECTIONS=2

# =====================================
# JWT 认证配置
# =====================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# =====================================
# Google Gemini API 配置
# 支持配置多个 API Key，用逗号分隔，会自动轮询以避免配额限制
# 例如: VITE_GEMINI_API_KEY=key1,key2,key3
# =====================================
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# =====================================
# 性能优化配置
# =====================================

# 内存监控阈值（MB）
MEMORY_WARNING_THRESHOLD=150
MEMORY_CRITICAL_THRESHOLD=200
MEMORY_GC_TRIGGER=120

# 启动性能目标（毫秒）
STARTUP_TIME_TARGET=3000

# 音频处理配置
AUDIO_BUFFER_SIZE=4096
AUDIO_SAMPLE_RATE=24000
AUDIO_NOISE_THRESHOLD=0.005
AUDIO_ENABLE_NOISE_GATE=true

# =====================================
# 开发模式配置
# =====================================
NODE_ENV=development
VITE_DEV_MODE=true

# 性能监控开关
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_MEMORY_MONITORING=true
ENABLE_STARTUP_METRICS=true

# 调试选项
DEBUG_AUDIO=false
DEBUG_DATABASE=false
DEBUG_MEMORY=false

# =====================================
# 构建优化配置
# =====================================

# 代码分割阈值（KB）
CHUNK_SIZE_WARNING=500

# 构建目标
BUILD_TARGET=modern

# 压缩选项
ENABLE_COMPRESSION=true
ENABLE_TREE_SHAKING=true

# =====================================
# 安全配置
# =====================================

# API密钥加密
ENCRYPTION_KEY=your-encryption-key-32-characters
ENCRYPTION_ALGORITHM=aes-256-gcm

# 会话配置
SESSION_TIMEOUT=7d
TOKEN_REFRESH_THRESHOLD=24h

# =====================================
# 日志配置
# =====================================
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5
ENABLE_CONSOLE_LOGS=true

# =====================================
# 功能开关
# =====================================

# 实验性功能
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_AUDIO_PROCESSING=false
ENABLE_ADVANCED_MEMORY_OPTIMIZATION=false

# UI优化
ENABLE_VIRTUAL_SCROLLING=true
ENABLE_LAZY_LOADING=true
ENABLE_DEBOUNCED_INPUT=true

# =====================================
# 网络配置
# =====================================

# API超时设置（毫秒）
API_TIMEOUT=30000
CONNECTION_TIMEOUT=5000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# =====================================
# 缓存配置
# =====================================

# 缓存大小限制（MB）
CACHE_MAX_SIZE=50
CACHE_TTL=3600000

# 音频缓存
AUDIO_CACHE_SIZE=20
AUDIO_CACHE_TTL=300000

# 数据库查询缓存
DB_QUERY_CACHE_SIZE=100
DB_QUERY_CACHE_TTL=600000