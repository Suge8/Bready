{
  "name": "bready",
  "version": "2.0.2",
  "description": "面宝 - AI面试伙伴",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "NODE_OPTIONS=\"--expose-gc\" electron-vite dev --inspect=0",
    "dev:gc": "electron-vite build && electron --js-flags=\"--expose-gc\" out/main/index.js",
    "dev:api": "tsx src/api-server.ts",
    "dev:full": "concurrently \"npm run dev:api\" \"npm run dev\"",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "test": "npx playwright test",
    "test:unit": "vitest run --coverage",
    "test:electron": "npx playwright test tests/electron-*.spec.js",
    "release": "node scripts/release.js",
    "clean": "rm -rf out dist-electron node_modules/.cache",
    "lint": "eslint .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "start": "npm run dev",
    "db:start": "node scripts/db-manager.js start",
    "db:stop": "node scripts/db-manager.js stop",
    "db:status": "node scripts/db-manager.js status",
    "db:init": "node scripts/db-manager.js init",
    "db:reset": "node scripts/db-manager.js reset",
    "db:setup": "node scripts/db-manager.js setup",
    "audio:install": "node scripts/install-system-audio-dump.js",
    "audio:reinstall": "node scripts/install-system-audio-dump.js --force",
    "audio:build": "cd assets && ./build-audio-dump.sh",
    "audio:test": "cd assets && timeout 3 ./SystemAudioDump > /dev/null 2>&1 && echo '✅ SystemAudioDump 工作正常' || echo '⚠️ SystemAudioDump 需要权限或不可用'"
  },
  "keywords": [
    "electron",
    "interview",
    "ai",
    "assistant"
  ],
  "author": "Bready Team",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@google/genai": "^1.9.0",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "electron": "^37.2.0",
    "electron-vite": "^4.0.0",
    "express": "^5.1.0",
    "framer-motion": "^12.23.9",
    "globals": "^16.3.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.3",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.3.3",
    "vitest": "^2.1.4"
  }
}
